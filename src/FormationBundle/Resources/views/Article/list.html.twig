{% extends 'base.html.twig' %}

{% block main %}
    <h1>Articles</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>RÃ©ference</th>
            <th><i class="fa fa-cogs"></i> Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.reference }}</td>
                <td>
                    <div class="item-actions">
                        <a href="{{ path('article_show', {'id': article.id }) }}" class="btn btn-sm btn-default">
                            Voir l'article
                        </a>
                        <a href="{{ path('article_update', { id: article.id }) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit"></i> Editer
                        </a>
                        <a href="{{ path('article_delete', { id: article.id }) }}" class="btn btn-sm btn-danger">
                            <i class="fa fa-crosshairs"></i> Supprimer
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">Aucuns articles.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}


